<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="{F5188C89-A880-4B7B-AF08-1D961D23EDEE}"
           Name="Visual Rust MSBuild targets for Visual Studio 2015"
           Language="1033"
           Version="0.2.0.0"
           Manufacturer="The Piston Project"
           UpgradeCode="{B5CC88F7-BC23-4400-95D8-9EE3FA95CC3F}">
    <Package InstallerVersion="400" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" CompressionLevel="high" />

    <Feature Id="Ftr_MSBuild_Targets"
             Title="MSBuild targets for Visual Studio 2015"
             Description="MSBuild tasks and targets. This feature is required for building Visual Rust projects from command line and Visual Studio."
             Level="1"
             Absent="disallow">
      <ComponentGroupRef Id="CmpGroup_MSBuild" />
      <ComponentGroupRef Id="CmpGroup_MSBuild_Targets_XamlRules" />
    </Feature>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="Dir_MSBuild" Name="MSBuild" >
          <Directory Id="Dir_MSBuild_InstallLocation" Name="VisualRust">
            <Directory Id="Dir_MSBuild_InstallLocation_Rules" Name="Rules" />
          </Directory>
        </Directory>
      </Directory>
    </Directory>
  </Product>
</Wix>
